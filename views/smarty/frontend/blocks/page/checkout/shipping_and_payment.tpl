[{assign var="payment" value=$oView->getPayment()}]

[{if "oscpaypal_acdc" == $payment->getId() || "oscpaypal_pui" == $payment->getId() || $vaultedPaymentDescription}]
    [{if $oViewConf->isFlowCompatibleTheme()}]
        [{include file="@osc_paypal/frontend/flow/shipping_and_payment.tpl"}]
    [{else}]
        [{include file="@osc_paypal/frontend/wave/shipping_and_payment.tpl"}]
    [{/if}]
[{elseif "oscpaypal" == $payment->getId()}]
    [{if $oViewConf->isFlowCompatibleTheme()}]
        [{include file="@osc_paypal/frontend/flow/shipping_and_payment_paypal.tpl"}]
    [{else}]
        [{include file="@osc_paypal/frontend/wave/shipping_and_payment_paypal.tpl"}]
    [{/if}]
[{else}]
    [{$smarty.block.parent}]
[{/if}]